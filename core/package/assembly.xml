<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>hmw</baseDirectory>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <excludes>
        <exclude>xalan:xalan</exclude>
        <exclude>xerces:xercesImpl</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

  <moduleSets>
  </moduleSets>
  
  <fileSets>
    <fileSet>
      <directory>../package</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>bin/*</include>
        <include>schema/*</include>
        <include>conf/**</include>
        <include>script/*</include>
        <include>etc/*</include>
        <include>webapps/*</include>
        <include>logs</include>
        <include>temp</include>
        <include>template/**</include>
        <include>readme.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../dist</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>hu-model-${project.version}.jar</include>
        <include>hu-common-${project.version}.jar</include>
        <include>hu-qparser-${project.version}.jar</include>
        <include>hu-database-${project.version}.jar</include>
        <include>hu-server-${project.version}.jar</include>
        <include>hu-client-${project.version}.jar</include>
        <include>hu-client-demo-${project.version}.jar</include>
        <include>hu-ftp-server-*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../dist</directory>
      <outputDirectory>/lib/adapter</outputDirectory>
      <includes>
        <include>hu-adapter-*-${project.version}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>./starter</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>sbin/*</include>
        <include>starter.properties</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>../dist/hmw-gui-${project.version}.war</source>
      <outputDirectory>webapps</outputDirectory>
      <destName>hmw.war</destName>
    </file>
  </files>  
</assembly>